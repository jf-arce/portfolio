---
import LightRays from '@/components/LightRays';
import MagicBento from '@/components/MagicBento';
import PageContainer from '@/components/PageContainer.astro';
import Layout from '@/layouts/Layout.astro';
---

<Layout>
  <PageContainer>
    <div class='flex h-full flex-col gap-6 md:p-0 lg:justify-center'>
      <h1 class='pt-6 text-center text-3xl font-medium sm:text-start'>Mis Proyectos</h1>
      <MagicBento />
    </div>
  </PageContainer>

  <div class='absolute inset-0 -z-10 h-full w-full bg-black'>
    <LightRays
      client:load
      raysOrigin='top-center'
      raysColor='#0077c6'
      raysSpeed={0.8}
      fadeDistance={1.2}
      lightSpread={1.5}
      rayLength={20}
      followMouse={false}
      mouseInfluence={0.1}
      noiseAmount={0.1}
      distortion={0.05}
      className='custom-rays'
    />
  </div>
</Layout>
